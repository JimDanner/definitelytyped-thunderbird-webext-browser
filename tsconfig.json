{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./build",
        "allowJs": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types/"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/**"
    ]
}